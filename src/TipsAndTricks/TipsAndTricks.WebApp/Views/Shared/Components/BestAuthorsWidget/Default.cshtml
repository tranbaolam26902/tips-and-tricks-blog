@model IList<AuthorItem>

<div class="mb-4">
    <h3 class="text-success mb-2">
        Tác giả nổi bật
    </h3>
    <ul class="list-group">
        @foreach (var author in Model) {
            <li class="list-group-item">
                <a asp-controller="Blog"
                    asp-action="Author"
                    asp-route-slug=@author.UrlSlug
                   title=@author.Notes>
                    @author.FullName
                </a>
            </li>
        }
    </ul>
</div>