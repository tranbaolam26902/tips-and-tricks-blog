@model IPagedList<Post>

@{
    var postQuery = (ViewBag.PostQuery as PostQuery) ?? new PostQuery();
    var actionName = "Index";
    var slug = "";

    if (!string.IsNullOrWhiteSpace(postQuery.AuthorSlug)) {
        actionName = "Author";
        slug = postQuery.AuthorSlug;
    } else if (!string.IsNullOrWhiteSpace(postQuery.CategorySlug)) {
        actionName = "Category";
        slug = postQuery.CategorySlug;
    } else if (!string.IsNullOrWhiteSpace(postQuery.TagSlug)) {
        actionName = "Tag";
        slug = postQuery.TagSlug;
    }
}

@if (Model.PageCount > 1) {
    <div class="text-center my-4">
        @if (Model.HasPreviousPage) {
            <a asp-controller="Blog"
               asp-action=@actionName
               asp-route-slug=@slug
               asp-route-keywords=@postQuery.Keyword
               asp-route-page=@(Model.PageNumber - 1)
               asp-route-page-size=@Model.PageSize
               class="btn btn-info">
                <i class="fa fa-arrow-left"></i>
                Trang trước
            </a>
        } else {
            <button type="button"
                    class="btn btn-outline-secondary"
                    dsiabled>
                <i class="fa fa-arrow-left"></i>
                Trang trước
            </button>
        }

        @if (Model.HasNextPage) {
            <a asp-controller="Blog"
               asp-action=@actionName
               asp-route-slug=@slug
               asp-route-keywords=@postQuery.Keyword
               asp-route-page=@(Model.PageNumber + 1)
               asp-route-page-size=@Model.PageSize
               class="btn btn-info">
                <i class="fa fa-arrow-right"></i>
                Trang sau
            </a>
        } else {
            <button type="button"
                    class="btn btn-outline-secondary"
                    dsiabled>
                <i class="fa fa-arrow-right"></i>
                Trang sau
            </button>
        }
    </div>
}