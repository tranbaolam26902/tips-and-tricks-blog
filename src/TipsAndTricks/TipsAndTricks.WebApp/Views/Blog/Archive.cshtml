@model IPagedList<Post>

@{
    ViewData["PageTitle"] = "Bài viết được đăng vào tháng " + @ViewData["Month"] + ", " + @ViewData["Year"];
    var postQuery = (ViewData["PostQuery"] as PostQuery) ?? new PostQuery();
}

<div class="p-4">
    <h3 class="text-primary mb-3">
        Bài viết được đăng vào tháng @ViewData["Month"], @ViewData["Year"]
    </h3>
    @foreach (var postItem in Model) {
        <partial name="_PostItem" model="postItem" />
    }
    <partial name="_Pager" model=@Model />
</div>