@model Post

<h1>
    @Model.Title
</h1>
<div class="d-flex align-items-center justify-content-between  my-2">
    <div>
        Chủ đề: <a asp-controller="Blog"
                   asp-action="Category"
                   asp-route-slug="@Model.Category.UrlSlug"
                   class="text-primary text-decoration-none">
            @Model.Category.Name
        </a>
    </div>
    @{
        if (Model.Tags.Count > 0) {
            <div>
                Thẻ: <partial name="_TagList" model=@Model.Tags />
            </div>
        }
    }
</div>
<div class="d-flex justify-content-between">
    <div>
        <span>Đăng ngày: @Model.PostedDate.ToString("dd/MM/yyyy")</span>
        <span>
            bởi: <a asp-controller="Blog"
                    asp-action="Author"
                    asp-route-slug="@Model.Author.UrlSlug"
                    class="text-primary text-decoration-none">
                @Model.Author.FullName
            </a>
        </span>
    </div>
    <div>
        <span class="me-1">@Model.ViewCount lượt xem</span>
        <div class="fb-share-button" data-href="https://dlu.edu.vn/" data-layout="button_count" data-size="large"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Flocalhost%3A7164%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Chia sẻ</a></div>
    </div>
</div>
<div class="mt-3">
    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl)) {
        <img src="/@Model.ImageUrl"
             class="w-100 rounded shadow"
             alt="post-image" />
    }
    <p class="mt-3">@Model.Description</p>
</div>
<hr />