@model Post

@{
    var imageUrl = string.IsNullOrWhiteSpace(Model.ImageUrl)
                ? "/images/1.jpg"
                : $"/{Model.ImageUrl}";
}

<article class="blog-entry mb-4">
    <div class="card">
        <div class="row g-0">
            <div class="col-md-4">
                <a asp-controller="Blog"
                   asp-action="Post"
                   asp-route-year="@Model.PostedDate.Year"
                   asp-route-month="@Model.PostedDate.Month"
                   asp-route-day="@Model.PostedDate.Day"
                   asp-route-slug="@Model.UrlSlug"
                   class="card-title fs-5 text-decoration-none">
                    <img src="@imageUrl"
                         class="card-img"
                         alt="@Model.Title" />
                </a>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <a asp-controller="Blog"
                       asp-action="Post"
                       asp-route-year="@Model.PostedDate.Year"
                       asp-route-month="@Model.PostedDate.Month"
                       asp-route-day="@Model.PostedDate.Day"
                       asp-route-slug="@Model.UrlSlug"
                       class="card-title fs-5 text-decoration-none">
                        @Model.Title
                    </a>
                    <p class="card-text">
                        <small class="text-muted">
                            Tác giả:
                        </small>
                        <a asp-controller="Blog"
                           asp-action="Author"
                           asp-route-slug="@Model.Author.UrlSlug"
                           class="text-primary text-decoration-none">
                            @Model.Author.FullName
                        </a>
                        <small class="text-muted">
                            Chủ đề
                        </small>
                        <a asp-controller="Blog"
                           asp-action="Category"
                           asp-route-slug="@Model.Category.UrlSlug"
                           class="text-primary text-decoration-none">
                            @Model.Category.Name
                        </a>
                    </p>
                    <p class="card-text">
                        @Html.Raw(Model.ShortDescription)
                    </p>
                    <div class="tag-list">
                        <partial name="_TagList" model=@Model.Tags />
                    </div>
                    <div class="text-end">
                        <a asp-controller="Blog"
                           asp-action="Post"
                           asp-route-year="@Model.PostedDate.Year"
                           asp-route-month="@Model.PostedDate.Month"
                           asp-route-day="@Model.PostedDate.Day"
                           asp-route-slug="@Model.UrlSlug"
                           class="btn btn-primary"
                           title="@Model.Title">
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>