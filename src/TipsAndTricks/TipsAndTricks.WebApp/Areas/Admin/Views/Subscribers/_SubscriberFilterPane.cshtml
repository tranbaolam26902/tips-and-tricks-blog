@model TipsAndTricks.WebApp.Areas.Admin.Models.SubscriberFilterModel

<form asp-area="Admin"
      asp-controller="Subscribers"
      asp-action="Index"
      method="get"
      class="row gy-2 gx-3 align-items-center">
    <div class="col-auto">
        <label asp-for="Keyword" class="visually-hidden"></label>
        <input type="text"
               asp-for="Keyword"
               class="form-control"
               placeholder="Nhập từ khóa" />
    </div>
    <div class="col-auto">
        <label asp-for="LastSubscribedYear" class="visually-hidden"></label>
        <input type="text"
               asp-for="LastSubscribedYear"
               class="form-control"
               placeholder="Nhập năm" />
    </div>
    <div class="col-auto">
        <label asp-for="LastSubscribedMonth" class="visually-hidden"></label>
        <select asp-for="LastSubscribedMonth"
                asp-items=@Model.MonthList
                class="form-select">
            <option value="" selected>-- Chọn tháng --</option>
        </select>
    </div>
    <div class="col-auto">
        <label asp-for="SubscribeState" class="visually-hidden"></label>
        <select asp-for="SubscribeState"
                asp-items=@Model.SubscribeStateList
                class="form-select">
            <option value="" selected>-- Chọn trạng thái --</option>
        </select>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Tìm/Lọc</button>
        <a asp-area="Admin"
           asp-controller="Subscribers"
           asp-action="Index"
           class="btn btn-warning">
            Bỏ lọc
        </a>
    </div>
</form>